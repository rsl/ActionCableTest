<%= content_tag :tr, id: dom_id(list), class: list.row_style do %>
  <td class="info">
    <span class="name"><%= list.name %></span>
    <span class="count">
      <%= link_to pluralize(list.items.count, 'item'), list_items_path(list) %>
    </span>
    <% if list.description.present? %>
      <div class="description"><%= list.description %></div>
    <% end %>
  </td>
  <td class="actions">
    <%= link_to icon('pencil'), edit_list_path(list) %>
    <%= link_to icon('trash'), list_path(list), method: :delete %>
  </td>
<% end %>