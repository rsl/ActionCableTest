<%= form_for item do |f| %>
  <div class="form_group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="form_group">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="form_group">
    <%= f.label :active, class: 'check_box' %>
    <%= f.check_box :active %>
  </div>

  <div class="buttons">
    <%= f.submit %>
  </div>
<% end %>
